<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:paddingTop="5sp"/>

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imagen"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#ffff"/>

    <TextView
        android:id="@+id/materia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imagen"
        android:layout_below="@+id/id"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/universidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/materia"
        android:textColor="#7b7777"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/imagen"
        />

    <TextView
        android:id="@+id/semestre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/universidad"
        android:layout_toRightOf="@+id/imagen"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/nivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/semestre"
        android:layout_toRightOf="@+id/imagen"
        android:textSize="20sp"
        />

</RelativeLayout>
